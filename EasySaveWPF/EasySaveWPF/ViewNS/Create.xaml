<Page x:Class="EasySaveWPF.ViewNS.Create"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:view="clr-namespace:EasySaveWPF.ViewNS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Create">

    <Grid MaxHeight="450">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{DynamicResource ChooseSave}" FontWeight="Bold" FontSize="10" HorizontalAlignment="Center" Margin="0,30"/>

        <!-- Selection chemin source -->
        <StackPanel Orientation="Vertical" Grid.Row="1" HorizontalAlignment="Center">
            <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
                <Button Name="btnOpenFile" Click="OpenFolderSource_Click" Content="{DynamicResource SelectSourceFolderButton}" />
            </WrapPanel>
            <TextBox Text="{Binding OpenFileSrc, Mode=TwoWay}" BorderThickness="0"  />
        </StackPanel>

        <!-- Selection chemin destination -->
        <StackPanel Orientation="Vertical" Grid.Row="2" HorizontalAlignment="Center">
            <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
                <Button Name="btnOpenFile2"  Click="OpenFolderDest_Click" Content="{DynamicResource SelectDestinationFolderButton}"/>
            </WrapPanel>
            <TextBox Text="{Binding OpenFileDest, Mode=TwoWay}" BorderThickness="0"  />
        </StackPanel>

        <StackPanel Grid.Row="3"  HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="Format de sauvgarde" Margin="0,0,5,0"  VerticalAlignment="Center" />
            <ComboBox SelectedIndex="0" Width="100" Grid.Row="3" VerticalAlignment="Center">
                <ComboBoxItem Content="Differentiel"/>
                <ComboBoxItem Content="Complete"/>
            </ComboBox>
        </StackPanel>

        <!-- Boutons en bas -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <Button Content="{DynamicResource AddButton}" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>