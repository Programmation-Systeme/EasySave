<Page x:Class="EasySaveWPF.ViewNS.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:view="clr-namespace:EasySaveWPF.ViewNS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">
    <Grid MaxHeight="500">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Easy Save" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0,30"/>
        <ScrollViewer Grid.Row="1" Margin="100,0,100,0">
            <ListBox Name="ItemSelected" SelectedItem="{Binding SelectedItem}" SelectionMode="Extended" ItemsSource="{Binding Items}"/>
        </ScrollViewer>
        <TextBox Grid.Row="2" Text="{Binding SelectedItem}"/>

        <!-- Boutons en bas -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <Button Content="Supprimer" Margin="5"/>
            <Button Content="Exécuter" Margin="5"  Command="{Binding ClickCommand}"/>
        </StackPanel>
    </Grid>
</Page>
