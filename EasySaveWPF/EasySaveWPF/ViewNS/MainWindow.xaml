<Window x:Class="EasySaveWPF.ViewNS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:EasySaveWPF.ViewNS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel>

        <DockPanel>
            <Menu DockPanel.Dock="Top"  Background="LightGray">
                <MenuItem Header="Home" Click="MenuItem_Home_Click"></MenuItem>
                <MenuItem Header="Créer" Click="MenuItem_Create_Click"></MenuItem>
                <MenuItem Header="Option">

                    <MenuItem Header="Langue">
                        <MenuItem Header="Francais" />
                        <MenuItem Header="Anglais" />
                    </MenuItem>
                    <MenuItem Header="Format des langues">
                        <MenuItem Header="XML" />
                        <MenuItem Header="JSON" />
                    </MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>

    </StackPanel>
</Window>
